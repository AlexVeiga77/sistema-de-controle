<h1>Relatório de Secretarias</h1>

<table id="customers">

    <thead>
    <tr>
        <th>Total de Salário</th>
        <th>Secretaria</th>
    </tr>
    </thead>
    <tbody>
    {% for totalSalarioLiquido in totalSalariosLiquido %}
        <tr>
            <td> R$ {{ totalSalarioLiquido.total|number_format(2, ',', '.') }}</td>
            <td>{{ totalSalarioLiquido.nome }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="18">relatório não encontrado</td>
        </tr>
    {% endfor %}
    </tbody>
</table