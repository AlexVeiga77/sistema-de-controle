{% extends 'base.html.twig' %}

{% block title %}Listagem de Secretarias{% endblock %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <h1>Relação de Secretarias</h1>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('cadastrar_secretaria') }} " class="btn btn-primary btn-lg float-right">Adicionar</a>
        </div>
    </div>

    <table class="table table-striped table-hover mt-3">
        <thead>
        <tr>
            <th>Cod</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        {% for secretaria in secretarias %}
            <tr>
                <td>{{ secretaria.id }}</td>
                <td>{{ secretaria.nome }}</td>

                <td>
                    <a class="btn btn-sm btn-warning" href="{{ path('visualizar_secretaria',{"id":secretaria.id}) }}"><i
                                class="fas fa-eye"></i></a>
                    <a class="btn btn-sm btn-success"
                       href="{{ path('editar_secretaria',{"id":secretaria.id}) }}"><i
                                class="fas fa-pencil-alt"></i></a>
                    <a class="btn btn-sm btn-danger bt_excluir_funcionario"
                       href=""><i
                            class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


