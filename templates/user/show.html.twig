{% extends 'base.html.twig' %}

{% block title %}Vizualizar{% endblock %}

{% block body %}
    <h1>Visualização</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>

        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Permissão</th>
            <td>{{ user.roles | join('|') }}</td>

        </tr>
        </tbody>
    </table>

{% endblock %}